-- Pet Randomizer GUI Script
local pets = {
    "Raccoon",
    "Frog",
    "Echo Frog",
    "Hedgehog",
    "Mole",
    "Night Owl"
}

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- RemoteEvent setup (optional if you want server spawning)
local remote = ReplicatedStorage:FindFirstChild("SpawnEggEvent")

-- Create ScreenGui
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "PetGachaGUI"

-- Create Button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.4, 0, 0.7, 0)
button.Text = "üéÅ Get Random Pet"
button.TextColor3 = Color3.new(1, 1, 1)
button.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 24
button.Parent = gui

-- Create Label to show result
local resultLabel = Instance.new("TextLabel")
resultLabel.Size = UDim2.new(0, 300, 0, 40)
resultLabel.Position = UDim2.new(0.35, 0, 0.6, 0)
resultLabel.BackgroundTransparency = 1
resultLabel.TextColor3 = Color3.new(1, 1, 1)
resultLabel.Font = Enum.Font.SourceSansBold
resultLabel.TextSize = 30
resultLabel.Text = ""
resultLabel.Parent = gui

-- On button click, randomize pet
button.MouseButton1Click:Connect(function()
    local chosenPet = pets[math.random(1, #pets)]
    resultLabel.Text = "üéâ You got: " .. chosenPet .. "!"
    
    if remote then
        remote:FireServer(chosenPet)
    end
end)
